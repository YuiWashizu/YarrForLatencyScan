#!/bin/bash

value=($(seq 0 5))
config=./configs/rd53a_test.json

for DiffVth1 in 450 400 350 300 250 200 150; do
    #DiffVth1=($(450-$step*50))
    echo "DiffVth1=$DiffVth1"
    sed -i -e "/\"DiffVth1\"/c\"DiffVth1\": ${DiffVth1}," $config
    bin/scanConsole -r configs/controller/specCfgExtTrigger.json -c configs/connectivity/example_rd53a_setup.json -s configs/scans/rd53a/std_exttrigger.json -p
    sleep 2s
done
sed -i -e "/\"DiffVth1\"/c\"DiffVth1\": 250," $config
    
